doctype html5
html(lang='utf-8')
    head
        title tokyo big brother
        style(type="text/css").
            html,body,div {margin:0px;padding:0px;}
            body {
                overflow-y: hidden;
                overflow-x: hidden;
            }
            #beacons-map {
              position:absolute;
              top:0px;
              left:0px;
              width: 100%;
              height: 100%;
            }
            #title {
              position:absolute;
              top:0px;
              left:0px;
              z-index:5000;
              font-size:60px;
              color:white;
            }
            .beacon-name {
              font-size: 15px;
            }
            #explanation-markup {
                display:none;
                position:absolute;
                top:0px;
                left:0px;
                background-color: rgba(256,256,256,0.8);
                width: 70%;
                height: 70%;
                overflow-y: scroll;
                overflow-x: hidden;
                margin: 5% 10%;
                padding: 5% 5% 0;
                z-index:15000;
            }
            .close {
                font-size: 20px;
                float:right;
            }

    body
        div#title Tokyo Big Brother
        div#explanation-markup
            div.close
                a(href="#") close
            include explanation
        div#beacons-map

        - cdnjs = "//cdnjs.cloudflare.com/ajax/libs/"
        - list = []
        - list.push(cdnjs+"zepto/1.1.3/zepto.min.js")
        - list.push(cdnjs+"marked/0.3.2/marked.js")
        - list.push("http://maps.google.com/maps/api/js?sensor=true")
        - list.push(cdnjs+"gmaps.js/0.4.9/gmaps.min.js")
        each src in list
            script(src=src, type='text/javascript')

        script(type="text/javascript")
            include index_script

