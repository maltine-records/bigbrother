doctype html5
html(lang='ja')
    head
        meta(charset="utf-8")
        title Tokyo Big Brother
        style(type="text/css").
            html,body,div {margin:0px;padding:0px;}
            body {
                overflow-y: hidden;
                overflow-x: hidden;
            }
            #beacons-map {
              position:absolute;
              top:0px;
              left:0px;
              width: 100%;
              height: 100%;
            }
            .callout {
                width: 115px;
                height: 3.2em;
            }
            .callout a{
                color: blue;
                text-decoration:none;
            }
            #title {
              position:absolute;
              top:0px;
              right:0px;
              z-index:5000;
              font-size:60px;
              color:white;
            }
            .beacon-name {
              font-size: 15px;
            }
            #explanation-markup {
                display:none;
                position:absolute;
                top:0px;
                left:0px;
                background-color: rgba(256,256,256,0.8);
                width: 70%;
                height: 70%;
                overflow-y: scroll;
                overflow-x: hidden;
                margin: 5% 10%;
                padding: 5% 5% 0;
                z-index:15000;
                cursor:pointer;
            }
            .close {
                font-size: 30px;
                float:right;
            }
            #buttons {
                position:relative;
                margin: 20px auto 0;
                width:140px;
                z-index:15000;
            }

    body
        div#title Tokyo Big Brother
        div#explanation-markup
            div.close
                a(href="#") click to close
            include explanation
        div#beacons-map

        div#buttons
            <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://tokyo-bb.cs8.biz/" data-via="tokyobigbrother" data-size="large" data-related="tokyobigbrother" data-hashtags="tokyo0505" data-lang="en">Tweet</a>
            <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>


        - cdnjs = "//cdnjs.cloudflare.com/ajax/libs/"
        - list = []
        - list.push(cdnjs+"zepto/1.1.3/zepto.min.js")
        - list.push(cdnjs+"marked/0.3.2/marked.js")
        - list.push("http://maps.google.com/maps/api/js?sensor=true")
        - list.push(cdnjs+"gmaps.js/0.4.9/gmaps.min.js")
        each src in list
            script(src=src, type='text/javascript')

        script(type="text/javascript")
            include index_script

