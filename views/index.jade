doctype html5
html(lang='utf-8')
    head
        title bigbrother
    body
        h1 bigbrother

        div.new-beacon
            h3 add new beacon
            form(action="/beacon", method="POST")
                label beacon UUID
                input(type="text", name="uuid")
                input(type="submit")

        div.exists-beacon
            h3 current beacons
            ul.beacon
                - for (var i=0;i<beacons.length;++i) {
                    li!= beacons[i].uuid
                -}
